<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2"><%= title %></h1>
    <div>
        <button type="button" class="btn btn-md btn-outline-primary" data-bs-toggle="modal"
            data-bs-target="#createModal">Create</button>
        <!-- <button type="button"
            class="btn btn-sm btn-outline-secondary">Import</button> -->
    </div>
</div>

<div class="modal modal-xl fade mt-3" id="createModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
    aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="staticBackdropLabel">
                    Add Medical Device Detail
                </h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form method="post" action="/add-medical-device-management">
                <div class="modal-body px-4">
                    <div class="row mb-2">
                        <div class="col">
                            <label for="khoa" class="form-label fw-bold">
                                Khoa
                            </label>
                            <input type="text" class="form-control" id="khoa" name="khoa" placeholder="Khoa">
                        </div>
                        <div class="col">
                            <label for="kySu" class="form-label fw-bold">
                                Kỹ sư
                            </label>
                            <input type="text" class="form-control" id="kySu" name="kySu" placeholder="Kỹ sư">
                        </div>
                    </div>
                    <div class="mb-2">
                        <label for="tenThietBi" class="form-label fw-bold">
                            Tên thiết bị
                        </label>
                        <input type="text" class="form-control" id="tenThietBi" name="tenThietBi" placeholder="Tên thiết bị">
                    </div>
                    <div class="row mb-2">
                        <div class="col">
                            <label for="soModel" class="form-label fw-bold">
                                Số Model
                            </label>
                            <input type="text" class="form-control" id="soModel" name="soModel" placeholder="Số Model">
                        </div>
                        <div class="col">
                            <label for="soSeri" class="form-label fw-bold">
                                Số Seri
                            </label>
                            <input type="text" class="form-control" id="soSeri" name="soSeri" placeholder="Số Seri">
                        </div>
                        <div class="col">
                            <label for="namSuDung" class="form-label fw-bold">
                                Năm sử dụng
                            </label>
                            <input type="text" class="form-control" id="namSuDung" name="namSuDung" placeholder="Năm sử dụng">
                        </div>
                    </div>
                    <div class="mb-2">
                        <label for="tinhTrang" class="form-label fw-bold">
                            Tình trạng thiết bị
                        </label>
                        <textarea type="text" class="form-control" id="tinhTrang" name="tinhTrang" placeholder="Tình trạng thiết bị"></textarea>
                    </div>
                    <div class="mb-2">
                        <label for="yKien" class="form-label fw-bold">
                            Ý kiến giám định
                        </label>
                        <textarea type="text" class="form-control" id="yKien" name="yKien" placeholder="Ý kiến giám định"></textarea>
                    </div>
                    <div class="mb-2">
                        <label for="noiDung" class="form-label fw-bold">
                            Nội dung sửa chửa
                        </label>
                        <textarea type="text" class="form-control" id="noiDung" name="noiDung" placeholder="Nội dung sửa chửa"></textarea>
                    </div>
                    <div class="col-12">
                        <label class="form-check-label fw-bold">
                            Chi phí
                        </label>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" value="Có"
                                name="inputChiPhi" id="inputChiPhi_Co">
                            <label class="form-check-label" for="inputChiPhi_Co">
                                Có
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio"
                                value="Không" name="inputChiPhi"
                                id="inputChiPhi_Khong">
                            <label class="form-check-label" for="inputChiPhi_Khong">
                                Không
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio"
                                value="Liên hệ công ty" name="inputChiPhi"
                                id="inputChiPhi_LienHe" checked>
                            <label class="form-check-label"
                                for="inputChiPhi_LienHe">
                                Liên hệ công ty
                            </label>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="table-responsive small mt-5">
    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th scope="col" style="width: 5%;">#</th>
                <th scope="col" style="width: 10%;">Khoa</th>
                <th scope="col" style="width: 10%;">Kỹ Sư</th>
                <th scope="col" style="width: 10%;">Tên TB</th>
                <th scope="col" style="width: 10%;">Model</th>
                <th scope="col" style="width: 10%;">Số Seri</th>
                <th scope="col" style="width: 10%;">Năm SD</th>
                <th scope="col" style="width: 10%;">Tình Trạng</th>
                <th scope="col" style="width: 10%;">Ý Kiến</th>
                <th scope="col" style="width: 10%;">Nội Dung</th>
                <th scope="col" style="width: 5%;">Chi Phí</th>
            </tr>
        </thead>
        <tbody>
            <% data.forEach(function(res) { %>
                <tr>
                    <td>
                        <div>
                            <a href="#" class="btn btn-sm btn-primary" data-bs-toggle="tooltip" data-bs-title="Edit">
                                <svg class="bi">
                                    <use xlink:href="#edit" />
                                </svg>
                            </a>
                            <a href="#" class="btn btn-sm btn-danger" data-bs-toggle="tooltip" data-bs-title="Delete">
                                <svg class="bi">
                                    <use xlink:href="#delete" />
                                </svg>
                            </a>
                        </div>
                    </td>
                    <td>
                        <%= res.tenQuanLy %>
                    </td>
                    <td>
                        <%= new Date(res.createdAt).toLocaleString('vi-VN') %>
                    </td>
                </tr>
            <% }); %>
            
            <% if (data.length==0) { %>
                <tr>
                    <td colspan="11" class="text-center">
                        No data available
                    </td>
                </tr>
            <% } %>
        </tbody>
    </table>
</div>