<div
    class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Medical Device Management</h1>
    <div>
        <button type="button"
            class="btn btn-md btn-outline-primary"
            data-bs-toggle="modal"
            data-bs-target="#createModal">Create</button>
        <!-- <button type="button"
            class="btn btn-sm btn-outline-secondary">Import</button> -->
    </div>
</div>

<div class="modal fade" id="createModal" data-bs-backdrop="static"
    data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel"
    aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="staticBackdropLabel">
                    Create Medical Device Management
                </h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal"
                    aria-label="Close"></button>
            </div>
            <form method="post" action="/add-medical-device-management">
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="name"
                            class="form-label">
                            Medical Device Manage Name
                        </label>
                        <input type="text" class="form-control"
                            id="name" name="tenQuanLy">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary"
                        data-bs-dismiss="modal">Close</button>
                    <button type="submit"
                        class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="table-responsive small mt-5">
    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th scope="col" style="width: 25%;">#</th>
                <th scope="col" style="width: 50%;">Name</th>
                <th scope="col" style="width: 25%;">Created At</th>
            </tr>
        </thead>
        <tbody>
            <% data.forEach(function(res) { %>
            <tr>
                <td>
                    <div>
                        <a href="#"
                            class="btn btn-sm btn-primary"
                            data-bs-toggle="tooltip"
                            data-bs-title="View">
                            <svg class="bi"><use
                                    xlink:href="#eye" /></svg>
                        </a>
                        <a href="#"
                            class="btn btn-sm btn-primary"
                            data-bs-toggle="tooltip"
                            data-bs-title="Generate file excel">
                            <svg class="bi"><use
                                    xlink:href="#generate" /></svg>
                        </a>
                        <a href="#"
                            class="btn btn-sm btn-primary"
                            data-bs-toggle="tooltip"
                            data-bs-title="Edit">
                            <svg class="bi"><use
                                    xlink:href="#edit" /></svg>
                        </a>
                        <a href="#"
                            class="btn btn-sm btn-danger"
                            data-bs-toggle="tooltip"
                            data-bs-title="Delete">
                            <svg class="bi"><use
                                    xlink:href="#delete" /></svg>
                        </a>
                    </div>
                </td>
                <td><%= res.tenQuanLy %></td>
                <td>
                    <%= new Date(res.createdAt).toLocaleString('vi-VN') %>
                </td>
            </tr>
            <% }); %>
        </tbody>
    </table>
</div>
